<h1>Some Clever Burger Restaurant Name</h1>

<h2>Menu</h2>
<ul>
    {{#each burgers}}
        {{#unless devoured}}
            {{> burgers/burger-block devoured=false}}
        {{/unless}}
    {{/each}}
</ul>

<h2>Burgers you've eaten</h2>
<ul>
    {{#each burgers}}
        {{#if devoured}}
            {{> burgers/burger-block devoured=true}}
        {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger to the Menu</h2>
<form class="create-form">
    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="burger-input" name="burger_name">
    </div>

    <button type="submit">Add Burger</button>
</form>

