<div class="jumbotron"> 
    <div class="page-header">Bob's Burgers</div>
    <div class="jumbotron-image"></div>
</div>

<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <div class="menu-box">
                <h2 class="menu-header">Menu</h2>
                <ul class="menu-burgers">
                    {{#each burgers}}
                        {{#unless devoured}}
                            {{> burgers/burger-block devour=false}}
                        {{/unless}}
                    {{/each}}
                </ul>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="eaten-box">
                <h2 class="eaten-header">Burgers you've eaten</h2>
                <ul class="eaten-burgers">
                    {{#each burgers}}
                        {{#if devoured}}
                            {{> burgers/burger-devoured devour=true}}
                        {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="addburger-box">
                <h2 class="addburger-header">Add a Burger to the Menu</h2>
                <form class="create-form">
                    <div class="form-group">
                        <label for="ca">Burger Name:</label>
                        <input type="text" id="burger-input" name="burger_name">
                    </div>
                    <button class="btn btn-sm" type="submit">Add Burger</button>
                </form>
            </div>
        </div>
    </div>
</div>

<footer class="container-fluid footer text-center">Created by Megan Swenson</footer>
